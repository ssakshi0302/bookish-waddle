<configuration>
    <!-- to screen -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- screen output pattern -->
            <pattern> %d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%X] %c{1.} %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>